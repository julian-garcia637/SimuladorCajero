@page
@model SaldoModel
@{
    ViewData["Title"] = "Consultar Saldo";
}
<link rel="stylesheet" href="~/css/Saldo.css" asp-append-version="true" />

<section class="layout-shell">
    <div class="transacciones-form-container">
        <p class="badge-floating">
            <i class="ri-eye-line" aria-hidden="true"></i>
            Consulta en tiempo real
        </p>
        <h2 class="form-title">Saldo actual</h2>
        <div class="saldo-valor">
            Saldo disponible
            <span class="saldo-monto">$@Model.Saldo</span>
        </div>
    </div>
</section>