@page
@model ConsignarModel
@{
    ViewData["Title"] = "Consignar Dinero";
}
<link rel="stylesheet" href="~/css/Consignar.css" asp-append-version="true" />

<section class="layout-shell">
    <div class="transacciones-form-container">
        <p class="badge-floating">
            <i class="ri-download-cloud-2-line" aria-hidden="true"></i>
            Consignaciones sin costo
        </p>
        <h2 class="form-title">Consignar dinero</h2>
        <p class="form-subtitle">Define el monto que quieres agregar y confirma la operaci√≥n. Todo queda registrado al instante.</p>
        <form method="post" class="form-grid">
            <div asp-validation-summary="ModelOnly" class="form-message"></div>
            <div class="form-group">
                <label asp-for="Monto">Monto a consignar</label>
                <input asp-for="Monto" class="form-control" min="1" step="0.01" required />
                <span asp-validation-for="Monto" class="form-message"></span>
            </div>
            <button type="submit" class="btn btn-primary">Consignar</button>
            @if (!string.IsNullOrEmpty(Model.Mensaje))
            {
                <div class="form-message">@Model.Mensaje</div>
            }
            @if (Model.NuevoSaldo.HasValue)
            {
                <div class="form-success">Nuevo saldo: $@Model.NuevoSaldo.Value</div>
            }
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}