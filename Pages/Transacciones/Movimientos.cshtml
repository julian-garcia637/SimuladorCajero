@page
@model MovimientosModel
@{
    ViewData["Title"] = "Movimientos";
}
<link rel="stylesheet" href="~/css/Movimientos.css" asp-append-version="true" />

<section class="layout-shell">
    <div class="transacciones-form-container">
        <p class="badge-floating">
            <i class="ri-pulse-line" aria-hidden="true"></i>
            Todo queda registrado
        </p>
        <h2 class="form-title">Movimientos recientes</h2>
        <div class="table-shell">
            <table class="movimientos-table">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Concepto</th>
                        <th>Valor</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var mov in Model.Movimientos)
                {
                    <tr>
                        <td>@mov.Fecha.ToString("g")</td>
                        <td>@mov.Concepto</td>
                        <td>@mov.Valor.ToString("C")</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</section>