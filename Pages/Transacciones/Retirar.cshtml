@page
@model RetirarModel
@{
    ViewData["Title"] = "Retirar Dinero";
}
<link rel="stylesheet" href="~/css/Retirar.css" asp-append-version="true" />

<section class="layout-shell">
    <div class="transacciones-form-container">
        <p class="badge-floating">
            <i class="ri-shield-check-line" aria-hidden="true"></i>
            Retiro seguro 24/7
        </p>
        <h2 class="form-title"><i class="ri-upload-cloud-line" aria-hidden="true"></i> Retirar dinero</h2>
        <form method="post" class="form-grid">
            <div asp-validation-summary="ModelOnly" class="form-message"></div>
            <div class="form-group">
                <label asp-for="Monto">Monto a retirar</label>
                <input asp-for="Monto" class="form-control" min="1" step="0.01" required />
                <span asp-validation-for="Monto" class="form-message"></span>
            </div>
            <button type="submit" class="btn btn-primary">Retirar</button>
            @if (!string.IsNullOrEmpty(Model.Mensaje))
            {
                <div class="form-message">@Model.Mensaje</div>
            }
            @if (Model.NuevoSaldo.HasValue)
            {
                <div class="form-success">Nuevo saldo: $@Model.NuevoSaldo.Value</div>
            }
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}